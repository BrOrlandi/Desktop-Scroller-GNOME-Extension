<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
  <flags id="org.gnome.shell.extensions.desktop-scroller.ScrollEdges">
    <value value="1" nick="left"/>
    <value value="2" nick="right"/>
    <value value="4" nick="top"/>
    <value value="8" nick="bottom"/>
  </flags>
  <schema path="/org/gnome/shell/extensions/desktop-scroller/" id="org.gnome.shell.extensions.desktop-scroller">
    <key name="scroll-edges" flags="org.gnome.shell.extensions.desktop-scroller.ScrollEdges">
      <default>["left","right"]</default>
      <summary>Enabled screen edges.</summary>
      <description>Screen edges that will trigger a workspace switch when scrolling up or down.</description>
    </key>
    <key type="b" name="desktop-scroll">
      <default>true</default>
      <summary>Enable scrolling on desktop.</summary>
      <description>Switches workspaces when scrolling over the desktop wallpaper.</description>
    </key>
  </schema>
</schemalist>
